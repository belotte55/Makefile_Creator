#!/bin/bash

# Don't touch !
white='\033[0;1m'
black='\033[0;30m'
red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'
pink='\033[0;35m'
cyan='\033[0;36m'
grey='\033[0;37m'

s_dir='srcs/'
o_dir='objs/'
i_dir='-I includes/'
main='main.c'
home=`cd; pwd`
lib='ft'
#libs="$home/Documents/Programs/C/Lib"
files=`ls srcs/*.c 2> /dev/null | cut -d'/' -f2 | tr '\n' ' '`
if [[ $files == "" ]]; then
	files=`ls *.c | tr '\n' ' '`
	s_dir=''
	o_dir=''
	i_dir=''
	main=''
fi

if [[ ! -d objs ]]; then
	mkdir objs
fi

rules='$(CC) $(FLAGS) $(LIBS) $^ '$main' -o $@'

if [[ "$1" != '' ]]; then
	name=$1
	rules='ar rc $(NAME) $(OBJS); ranlib -o $@'
else
	name='run'
fi

#I_DIR	= -I '"$home"'/Documents/Programs/C/Lib/includes '"$i_dir"'
#LIB		= '"$home"'/Documents/Programs/C/Lib/libft.a
#LIBS_DIR= -L '"$libs"' -I '"$libs"'

echo 'NAME	= '"$name"'
CC		= gcc
S_DIR	= '"$s_dir"'
O_DIR	= '"$o_dir"'
I_DIR	= '"$i_dir"'
FLAGS	= -Wall -Wextra -Werror $(I_DIR) $(LIBS_DIR)
FILES	= '"$files"'
LIBS_F	= '"$lib"'
SRC		= $(addprefix $(S_DIR),$(FILES))
OBJS	= $(addprefix $(O_DIR),$(FILES:.c=.o))
LIBS	= $(addprefix -L. -l,$(LIBS_F))
RM		= rm -f

all: 		$(NAME)

$(NAME): 	$(OBJS)
	@echo "./'$pink'$(NAME) created'$white'."
	@'"$rules"'
	@echo "'$white'Done."

$(O_DIR)%.o:		$(S_DIR)%.c '${main}'
	@echo "'$yellow'$<'$grey'\t->  '$green'$@'$white'"
	@$(CC) $(FLAGS) -c $< -o $@

clean:
	@$(RM) $(OBJS)

fclean: 	clean
	@$(RM) $(NAME)
	@echo "'$white'Clear."

re:			fclean all' > Makefile
